<div class="form-pages">
<% if current_user %>
	<% if current_user.id == @listing.user_id %>
	<%= link_to 'Edit', edit_listing_path(@listing) %> |
	<% end %>
<% end %>
<%= link_to 'Back to Home', root_path %>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <% @listing.avatars.each do |listing| %>
  <%= image_tag listing.medium.url %>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<% if current_user %>
	<% if current_user.id != @listing.user_id %>
	<h2>Reserve this list.</h2>
	<%= render :partial => "reservations/form" %>
	<% end %>
<% end %>
</div>